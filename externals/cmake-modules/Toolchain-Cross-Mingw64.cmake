set(CMAKE_SYSTEM_NAME Windows)
set(TOOLCHAIN_PREFIX x86_64-w64-mingw32.static)
set(TOOLCHAIN_INSTALL_DIR /usr/lib/mxe)
set(BIN_PATH ${TOOLCHAIN_INSTALL_DIR}/usr/bin)

set(CMAKE_C_COMPILER ${BIN_PATH}/${TOOLCHAIN_PREFIX}-gcc)
set(CMAKE_CXX_COMPILER ${BIN_PATH}/${TOOLCHAIN_PREFIX}-g++)
set(CMAKE_RC_COMPILER ${BIN_PATH}/${TOOLCHAIN_PREFIX}-windres)

set(CMAKE_FIND_ROOT_PATH ${TOOLCHAIN_INSTALL_DIR}/usr/${TOOLCHAIN_PREFIX}/)

set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)